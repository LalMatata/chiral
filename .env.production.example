# 生产环境配置文件
# 复制此文件为 .env.production 并填入实际值

# 数据库配置
DB_PASSWORD=your_secure_database_password_here

# Redis配置
REDIS_PASSWORD=your_secure_redis_password_here

# Flask应用密钥
SECRET_KEY=your_super_secret_key_here_minimum_32_characters

# 邮件服务配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# CRM集成配置
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here
HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here

# Salesforce配置（可选）
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token
SALESFORCE_DOMAIN=login

# Google Analytics配置
GA_TRACKING_ID=G-XXXXXXXXXX

# 域名配置
DOMAIN_NAME=chiral-robotics.com
API_BASE_URL=https://api.chiral-robotics.com

# SSL证书路径
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# 监控配置
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=chiral-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# 性能配置
WORKERS=4
MAX_CONNECTIONS=1000
CACHE_TTL=3600

# 安全配置
ALLOWED_HOSTS=chiral-robotics.com,www.chiral-robotics.com,api.chiral-robotics.com
CORS_ORIGINS=https://chiral-robotics.com,https://www.chiral-robotics.com

# 第三方服务配置
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# CDN配置
CDN_URL=https://cdn.chiral-robotics.com
STATIC_URL=https://static.chiral-robotics.com

